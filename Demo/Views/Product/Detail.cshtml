@model Product

@{
    ViewBag.Title = "Product | Detail";
}

@section head {
    <style>
        img {
            border: 1px solid #333;
            width: 200px;
            height: 200px;
        }
    </style>
}

<p>
    <img src="/products/@Model.PhotoURL">
</p>

<table class="table detail">
    <tr>
        <th>Id</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th>Name</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Price</th>
        <td>RM @Model.Price</td>
    </tr>
</table>

<p>
    <button data-get="/">Index</button>
    <button data-back>Back</button>
</p>
